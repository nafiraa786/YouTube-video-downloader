"""
Environment configuration for YouTube Video Downloader
Copy this to .env and adjust values as needed
"""

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
HOST=127.0.0.1
PORT=5000

# CORS Configuration (Frontend URLs)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000,http://127.0.0.1:5000

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATE_LIMIT_DEFAULT=200 per day, 50 per hour
RATE_LIMIT_VIDEO_INFO=30 per hour
RATE_LIMIT_DOWNLOAD=20 per hour
RATE_LIMIT_FILE_SERVE=100 per hour

# File Configuration
MAX_DURATION_SECONDS=3600
MAX_FILE_SIZE_MB=5120
FILE_RETENTION_HOURS=24
CLEANUP_INTERVAL_SECONDS=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=yt_downloader.log

# Download Quality Limits
ALLOW_4K=True
MAX_VIDEO_QUALITY=1080
